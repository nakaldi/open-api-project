<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.open_api_project.module.auth.repository.RefreshTokenMapper">

    <insert id="save" parameterType="com.example.open_api_project.module.auth.entity.RefreshToken">
        INSERT INTO refresh_tokens (member_id, token_value, user_agent, issued_at, expires_at)
        VALUES (#{memberId}, #{tokenValue}, #{userAgent}, #{issuedAt}, #{expiresAt})
    </insert>

    <select id="findByTokenValue" parameterType="String" resultType="com.example.open_api_project.module.auth.entity.RefreshToken">
        SELECT
        id,
        member_id,
        token_value,
        user_agent,
        issued_at,
        expires_at
        FROM
        refresh_tokens
        WHERE
        token_value = #{tokenValue}
    </select>

    <delete id="deleteByTokenValue" parameterType="String">
        DELETE FROM
        refresh_tokens
        WHERE
        token_value = #{tokenValue}
    </delete>

</mapper>